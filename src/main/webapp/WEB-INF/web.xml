<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Test</servlet-name>
    <servlet-class>com.servlets.Test</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/bonjour</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>com.servlets.Home</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
      
  <servlet>
    <servlet-name>findComptes</servlet-name>
    <servlet-class>com.servlets.FindComptes</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>findComptes</servlet-name>
    <url-pattern>/findComptes</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>detailsCompte</servlet-name>
    <servlet-class>com.servlets.DetailsCompte</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>detailsCompte</servlet-name>
    <url-pattern>/detailsCompte</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
    <servlet-name>Kojson</servlet-name>
    <servlet-class>com.servlets.Kojson</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Kojson</servlet-name>
    <url-pattern>/kojson</url-pattern>
  </servlet-mapping>
  
  
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
</web-app>